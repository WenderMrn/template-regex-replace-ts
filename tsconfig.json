{
  "compilerOptions": {
    "module": "commonjs",
    "lib": [
      "es6"
    ],
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "dist",
    "allowJs": true,
    "moduleResolution": "node",
    "rootDir": "src",
    "declaration": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true
  }
}